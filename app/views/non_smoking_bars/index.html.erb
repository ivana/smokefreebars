<ul id="bars">
<% @non_smoking_bars.each do |bar| %>
  <li>
    <h2><%= bar.name %></h2>
    <span class="address"><%= bar.address %></span>
    <span class="neighbourhood"><%= bar.neighbourhood %></span>
    <% if logged_in? %>
      <ol>
        <li><%= link_to 'Edit', edit_non_smoking_bar_path(bar) %></li>
        <li><%= link_to 'Delete', bar, confirm: 'Are you sure?', method: :delete %></li>
      </ol>
    <% end %>
  </li>
<% end %>
</ul>

<p>
<% if logged_in? %>
  <%= link_to 'Add a smoke-free bar', new_non_smoking_bar_path %>
<% else %>
  Know a place not listed here? Send an email to
  <a href="mailto:dev@ivana.im?subject=Smoke-free bars">dev@ivana.im</a> to let me know!
<% end %>
</p>

<p id="notice"><%= notice %></p>
