<table>
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>Neighbourhood</th>
    <!-- <th>City</th> -->
    <!-- <th>Partly</th> -->
    <% if logged_in? %>
    <th></th>
    <th></th>
    <% end %>
  </tr>

<% @non_smoking_bars.each do |non_smoking_bar| %>
  <tr>
    <td><%= non_smoking_bar.name %></td>
    <td><%= non_smoking_bar.address %></td>
    <td><%= non_smoking_bar.neighbourhood %></td>
    <!-- <td><%= non_smoking_bar.city %></td> -->
    <!-- <td><%= non_smoking_bar.partly %></td> -->
    <% if logged_in? %>
    <td><%= link_to 'Edit', edit_non_smoking_bar_path(non_smoking_bar) %></td>
    <td><%= link_to 'Delete', non_smoking_bar, confirm: 'Are you sure?', method: :delete %></td>
    <% end %>
  </tr>
<% end %>
</table>

<% if logged_in? %>
  <%= link_to 'Add a smoke-free bar', new_non_smoking_bar_path %>
<% else %>
  <p>Know a place not listed here? Send an email to
    <a href="mailto:dev@ivana.im?subject=Smoke-free bars">dev@ivana.im</a> to let me know!
  </p>
<% end %>

<p id="notice"><%= notice %></p>

